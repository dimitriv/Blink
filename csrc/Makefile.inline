COMPILER ?= gcc

ifeq ($(COMPILER), clang)
CXX = clang++
else
CXX = g++
endif

# Note: SSE3 is required, SSSE3 is optional.
CXXFLAGS = -std=c++11 -march=native -mtune=native -w -pipe -O3 -fwhole-program

LIBS = -lm

ifeq ($(RADIO), bladeRF)
LIBS += -lbladeRF
EXTRACOPTS += -DBLADE_RF
endif

EXECUTABLE = driver

all : driver

driver : Wrapper.cpp
	$(CXX) $(CXXFLAGS) $(EXTRACOPTS) -o $(EXECUTABLE) $+ $(LIBS)

clean:
	-rm -f *.o ./*/*.o
	-rm -f *~
	-rm -f $(EXECUTABLE)
	-rm -f *.out

