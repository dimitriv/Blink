COMPILER ?= gcc

ifeq ($(COMPILER), clang)
CXX = clang++
else
CXX = g++
endif

# Ignore all warnings in inlined version
CXXFLAGS = -std=c++11 -msse3 -w -O3 -pipe -fwhole-program
LIBS = -lm 
OBJDIR = .

EXECUTABLE = driver
LUT_EXECUTABLE = lutexec

all : driver

driver : Wrapper.cpp
	$(CXX) $(CXXFLAGS) $(EXTRACOPTS) -o $(EXECUTABLE) $+ $(LIBS)

