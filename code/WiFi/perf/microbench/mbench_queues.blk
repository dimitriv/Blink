#include "mbenchutils.blk"
#define N EXEC_TIME_A
#define M EXEC_TIME_B

fun comp A(n : int) {
	var cnt : int;
	repeat {
		x <- takes 64;
		do {cnt := 1;}
		do {
			while (cnt < n) {
				sora_fft(x);
				cnt := cnt + 1;
			}
		}
		emits sora_fft(x);
	}
}

fun comp B(m : int) {
	var cnt : int;
	repeat {
		x <- takes 64;
		do {
			while (cnt < m) {
				sora_fft(x);
				cnt := cnt + 1;
			}
		}
		emits sora_fft(x);
	}
}



let comp main = read >>> A(N) |>>>| B(M) >>> write

