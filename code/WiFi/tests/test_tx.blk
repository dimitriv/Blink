#include "../transmitter/transmitter.blk"


fun comp amp(c:int16) { 
  repeat seq {
    (x:complex16) <-take;
    let cre = x.re in 
    let cim = x.im in 
    let dre = cre*c in 
    let dim = cim*c in 
    emit complex16{re=dre;im=dim}
  }
}


let comp main = read >>> transmitter() >>> amp(10) >>> write

